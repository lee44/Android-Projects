<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_gravity="center_horizontal"
            android:text="Cost Graph"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/replacementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chart"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:text="Replacement Progress"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/oil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/replacementTitle"
            android:layout_marginLeft="5dp"
            android:text="Oil"
            android:textColor="@android:color/white"
            android:textSize="@dimen/progressbar" />

        <ProgressBar
            android:id="@+id/oilPB"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/oil"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:progressDrawable="@drawable/custom_progress_bar"
            />

        <TextView
            android:id="@+id/brakes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/oilPB"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Brake"
            android:textColor="@android:color/white"
            android:textSize="@dimen/progressbar" />

        <ProgressBar
            android:id="@+id/brakesPB"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/brakes"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:progressDrawable="@drawable/custom_progress_bar"/>

        <TextView
            android:id="@+id/wheels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/brakesPB"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Wheel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/progressbar" />

        <ProgressBar
            android:id="@+id/wheelsPB"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/wheels"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:progressDrawable="@drawable/custom_progress_bar"/>

        <TextView
            android:id="@+id/battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wheelsPB"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Battery"
            android:textColor="@android:color/white"
            android:textSize="@dimen/progressbar" />

        <ProgressBar
            android:id="@+id/batteryPB"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/battery"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:progressDrawable="@drawable/custom_progress_bar"/>

        <TextView
            android:id="@+id/timingBelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/batteryPB"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Timing Belt"
            android:textColor="@android:color/white"
            android:textSize="@dimen/progressbar" />

        <ProgressBar
            android:id="@+id/timingBeltPB"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/timingBelt"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:progressDrawable="@drawable/custom_progress_bar"/>

    </LinearLayout>

</ScrollView >