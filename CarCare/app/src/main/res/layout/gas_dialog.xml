<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gasFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:text="Date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textview"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:hint="Enter Date"
                android:textSize="@dimen/edittext"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="Cost"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textview"
                android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cost_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/error_appearance"
            app:hintEnabled="false">
            <EditText
                android:id="@+id/costEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:maxLength="6"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Enter Cost"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal|numberSigned"
                android:textSize="@dimen/edittext"/>
        </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="Miles"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textview"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/miles_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/error_appearance"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/milesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/costEditText"
                    android:layout_column="2"
                    android:maxLength="6"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Enter Miles"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="@dimen/edittext"/>
            </android.support.design.widget.TextInputLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="Gallons"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textview"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/gallons_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:errorTextAppearance="@style/error_appearance">

                <EditText
                    android:id="@+id/gallonsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/milesEditText"
                    android:layout_column="2"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:hint="Enter Gallons"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal|numberSigned"
                    android:maxLength="6"
                    android:textSize="@dimen/edittext"/>
            </android.support.design.widget.TextInputLayout>
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/mpgTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Table"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="0 MPG"
        android:textColor="#000000"
        android:textSize="38dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/OK"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="OK"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/OK"
        android:text="Cancel"
        android:textSize="18sp" />

</RelativeLayout>