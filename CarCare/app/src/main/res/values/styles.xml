<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used, for instance, for the default ActionBar(but not Toolbar) background.We specify the same color for the toolbar background in toolbar.xml.. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark is used for the status bar (with the battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/dark_status_bar</item>
        <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets(floating action buttong). -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightOverflow" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- android:textColorPrimary is the  color of the title text in the Toolbar-->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- =============================================================== -->
    <!-- Material_Dark styles -->
    <!-- =============================================================== -->
    <style name="dark_cardView_background">
        <item name="cardBackgroundColor">@color/cardView_background</item>
    </style>

    <style name="dark_textView_default">
        <item name="android:textColor">@color/dark_textview</item>
        <item name="android:textSize">@dimen/Default</item>
    </style>

    <style name="dark_textView_small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_textview</item>
    </style>

    <style name="dark_textView_medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_textview</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dark_textView_large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dark_editText">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">@dimen/edittext</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/neon</item>
        <item name="colorAccent">@color/neon</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="dark_layout_background">
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="dark_floating_action_button">
        <item name="colorControlNormal">@color/neon</item>
        <item name="colorAccent">@color/neon</item>
        <item name="colorControlActivated">@color/neon</item>
    </style>

    <style name="dark_cardViewBackground_gas_entry">
        <item name="cardBackgroundColor">@color/cardView_background</item>
    </style>

    <style name="dark_textView_gas_entry_MPG">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/MPGorMiles</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dark_status_bar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="dark_tool_bar">
        <item name="android:background">@color/dark_app_bar</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/dark_app_bar</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <!--<item name="colorAccent">@color/white</item>-->
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <!--<item name="colorControlActivated">@color/neon</item>-->
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <!--<item name="colorControlHighlight">@color/neon</item>-->
    </style>

    <style name="dark_bot_nav_bar">
        <!--Colors the background that is not covered by the nav bar-->
        <item name="android:background">@color/dark_app_bar</item>
        <!--Colors the background of each item in the nav bar-->
        <item name="itemBackground">@color/dark_app_bar</item>
        <!--Colors the icons-->
        <item name="itemIconTint">@drawable/bot_nav_dark</item>
        <item name="itemTextColor">@drawable/bot_nav_dark</item>
    </style>

    <style name="dark_tool_bar_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dark_tab_layout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/neon</item>
        <item name="tabBackground">@color/dark_cards_dialog</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/neon</item>
    </style>

    <style name="dark_spinner_textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/spinnertextview</item>
        <item name="android:background">@color/dark_cards_dialog</item>
    </style>

    <!-- =============================================================== -->
    <!-- Material_Light styles -->
    <!-- =============================================================== -->
    <style name="light_cardView_background">
        <item name="cardBackgroundColor">@color/light_cards_dialog</item>
    </style>

    <style name="light_textView_default">
        <item name="android:textColor">@color/light_textview</item>
        <item name="android:textSize">@dimen/Default</item>
    </style>

    <style name="light_textView_small">
        <item name="android:textColor">@color/light_textview</item>
        <item name="android:textSize">@dimen/small_textview</item>
    </style>

    <style name="light_textView_medium">
        <item name="android:textColor">@color/light_textview</item>
        <item name="android:textSize">@dimen/medium_textview</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="light_textView_large">
        <item name="android:textColor">@color/light_textview</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="light_editText">
        <item name="android:textColorPrimary">@color/light_edit_textview</item>
        <item name="android:textSize">@dimen/edittext</item>
        <item name="colorControlNormal">@color/light_edit_textview</item>
        <item name="colorControlActivated">@color/light_edit_textview_underline_color</item>
        <item name="colorAccent">@color/light_edit_textview_cursor_color</item>
        <item name="android:textColorHint">@color/light_textview</item>
    </style>

    <style name="light_layout_background">
        <item name="android:background">@color/light_background</item>
    </style>

    <style name="light_floating_action_button">
        <item name="colorControlNormal">@color/light_floating_action_button</item>
        <item name="colorAccent">@color/light_floating_action_button</item>
        <item name="colorControlActivated">@color/light_floating_action_button</item>
    </style>

    <style name="light_cardViewBackground_gas_entry">
        <item name="cardBackgroundColor">@color/light_background</item>
    </style>

    <style name="light_textView_gas_entry_MPG">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/MPGorMiles</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="light_status_bar">
        <item name="android:statusBarColor">@color/light_status_bar</item>
    </style>

    <style name="light_tool_bar">
        <item name="android:background">@color/light_app_bar</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/light_app_bar</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/black</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/black</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <!--<item name="colorControlActivated">@color/neon</item>-->
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <!--<item name="colorControlHighlight">@color/neon</item>-->
    </style>

    <style name="light_bot_nav_bar">
        <!--Colors the background that is not covered by the nav bar-->
        <item name="android:background">@color/light_app_bar</item>
        <!--Colors the background of each item in the nav bar-->
        <item name="itemBackground">@color/light_app_bar</item>
        <!--Colors the icons-->
        <item name="itemIconTint">@drawable/bot_nav_light</item>
        <item name="itemTextColor">@drawable/bot_nav_light</item>
    </style>

    <style name="light_tool_bar_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="light_tab_layout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabBackground">@color/light_cards_dialog</item>
        <item name="tabTextColor">@color/light_app_bar_text</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="light_spinner_textview">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/spinnertextview</item>
        <item name="android:background">@color/light_cards_dialog</item>
    </style>
    
</resources>
